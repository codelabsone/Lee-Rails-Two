<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'BDS Hondas', root_path, class: 'navbar-brand' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shop By Type<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Shop Sedans", filtered_cars_path(:sedan) %></li>
              <li><%= link_to "Shop SUVS & Crossovers", filtered_cars_path(:suv) %></li>
              <li><%= link_to "Shop Coupes", filtered_cars_path(:coupe) %></li>
              <li><%= link_to "Shop Hatchbacks", filtered_cars_path(:hatchback) %></li>
              <li><%= link_to "Shop Hybrids & Electric", filtered_cars_path(:hybrid) %></li>
            </ul>
          </li>
          <li><%= link_to "View All New Inventory", filtered_cars_path(:recent) %></li>
          <li><%= link_to "View All Used Inventory", filtered_cars_path(:used) %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user_admin? %>
            <li><%= link_to "New", new_car_path(@car) %></li>
          <% end %>
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Account Details", current_user %></li>
                <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Sign Out", session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign Up', signup_path %></li>
            <li><%= link_to "Sign In", signin_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
