<%= form_for(@car, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :make, class: "col-md-2" %>
    <%= f.text_field :make, class: "col-md-10" %>
  </div>
  <div class="form-group">
    <%= f.label :model, class: "col-md-2" %>
    <%= f.text_field :model, class: "col-md-10" %>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-md-2" %>
    <%= f.number_field :year, class: "col-md-10" %>
  </div>
  <div class="form-group">
  <%= f.label :price, class: "col-md-2" %>
  <%= f.number_field :price, class: "col-md-10" %>
  </div>
  <div class="form-group">
    <%= f.label :color, class: "col-md-2" %>
    <%= f.text_field :color, class: "col-md-10" %>
  </div>
  <div class="form-group">
    <%= f.label :milage, class: "col-md-2" %>
    <%= f.number_field :mileage, class: "col-md-10" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-md-2" %>
    <%= f.text_area :description, cols: 40, rows: 7, class: "col-md-10"%>
  </div>
  <div class="form-group">
    <%= f.label :image_file_name, class: "col-md-2" %>
    <%= f.text_field :image_file_name, class: "col-md-10" %>
  </div>
  <div class="form-group">
    <%= f.submit %>
    <%= link_to "Cancel", cars_path %>
  </div>
  <% end %>
